{
  "name": "boom-ai",
  "displayName": "Boom ai",
  "version": "1.0.1",
  "description": "Boost your WhatsApp with Boom! Summarize chats, email meetings, and get message suggestions. Powered by GPT",
  "author": "Omry Zuta",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "test": "plasmo test"
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@plasmohq/messaging": "^0.5.0",
    "@plasmohq/storage": "^1.8.0",
    "antd": "^5.9.0",
    "axios": "^1.5.0",
    "plasmo": "0.83.0",
    "react": "18.2.0",
    "react-confetti-explosion": "^2.1.2",
    "react-dom": "18.2.0",
    "styled-components": "^6.0.8"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.0",
    "@types/chrome": "0.0.245",
    "@types/node": "20.5.9",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "prettier": "3.0.3",
    "typescript": "5.2.2"
  },
  "manifest": {
    "permissions": [
      "contextMenus"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/pic-calendar_bomb.png",
          "assets/pic-*",
          "@react-confetti-explosion/lib/index.js"
        ],
        "matches": [
          "https://web.whatsapp.com/*"
        ]
      }
    ],
    "host_permissions": [
      "https://*/*"
    ]
  }
}
